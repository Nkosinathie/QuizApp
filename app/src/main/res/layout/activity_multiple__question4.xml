<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFA5B3A7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.quizapp1.Multiple_Question4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="30dp"
            android:text="MULTIPLE CHOICE "
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="30dp"
            android:text="4. WHAT IS THE CAPITAL OF INDONESIA? "
            android:textSize="30sp" />
        <Button
            android:id="@+id/singapore"
            android:onClick="onClicksng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#FF52870C"
            android:text="SINGAPORE"
            android:textColorLink="@android:color/holo_blue_bright" />
        <Button
            android:id="@+id/jakarta"
            android:onClick="onClickjkt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#FF52870C"
            android:text="JAKARTA"
            android:textColorLink="@android:color/holo_blue_bright" />
        <Button
            android:id="@+id/pretoria"
            android:onClick="onClickptr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#FF52870C"
            android:text="PRETORIA"
            android:textColorLink="@android:color/holo_blue_bright" />
        <Button
            android:id="@+id/back"
            android:onClick="onClickbck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#FF52870C"
            android:text="BACK"
            android:textColorLink="@android:color/holo_blue_bright" />






    </LinearLayout>

</RelativeLayout>
